<article class="container-fluid">
  <section class="col-md-6 col-sm-8 col-xs-12">
    <form class="form-horizontal">
      <section class="formulario">
        <label class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">Nombre</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Nombre">
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">Apellido</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Apellido">
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">DNI/Pasaporte</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="DNI/Pasaporte">
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">Celular</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Celular">
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">Tel. Opcional</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Tel. Opcional">
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">Domicilio</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Domicilio">
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">Dpto/Piso/Nro</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Dpto/Piso/Nro">
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">Código Postal</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" placeholder="Codigo Postal">
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">Método de envío</label>
        <div class="col-sm-10">
          <label>
            <input type="checkbox"> Capital Federal
          </label>
          <label>
            <input type="checkbox"> Provincia de Buenos Aires
          </label>
          <label>
            <input type="checkbox"> Resto del País
          </label>
        </div>
      </section>
      <section class="formulario">
        <label class="col-sm-2 control-label">¿Retira el titular?</label>
        <section class="col-sm-10">
          <label>
            <input type="checkbox"> Si
          </label>
          <label>
            <input type="checkbox"> No
          </label>
        </section>
      </section>
      <section class="formulario">
        <section class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Enviar</button>
        </section>
      </section>
    </form>
  </section>
  <section class="col-md-6 col-sm-4 col-xs-12">
    <figure class="metodos-envio">
      <img class="imagen-oca" src="images/envios.png" alt="Métodos envío OCA">
    </figure>
  </section>
</article>
{{outlet}}
